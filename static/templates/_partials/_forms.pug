  input.form-control.js-qty(id="id_label", type="text", value=value)


mixin input-checkbox(label, value, help)
  .checkbox
    label(for="id_label")
      if (value == true)
        input(id="id_label", type="checkbox", checked="checked")
      else
        input(id="id_label", type="checkbox")
      | #{label}
    if (help)
      .help-block= help

mixin input-select(options, selected)
  select.form-control
    each opt in options
      if (opt == selected)
        option(value=opt, selected="selected")= opt
      else
        option(value=opt)= opt
