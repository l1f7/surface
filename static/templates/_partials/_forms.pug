mixin input-text(label, value, help)
  .form-group
    if (label != null)
      label(for="id_label")= label
      if (value != null)
        input.form-control(id="id_label", type="text", value=label)
      else
        input.form-control(id="id_label", type="text", placeholder=label)
    else
      input.form-control(id="id_label", type="text", value=value)
    if (help)
      .help-block!= help


