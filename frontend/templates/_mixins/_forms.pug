mixin input-checkbox(label, value, help)
  .uk-margin
    label(for="id_label")
      if (value == true)
        input.uk-checkbox(id="id_label", type="checkbox", checked="checked")
      else
        input.uk-checkbox(id="id_label", type="checkbox")
      |  #{label}
    if (help)
      .help-block= help

mixin input-select(options, selected)
  select.form-control
    each opt in options
      if (opt == selected)
        option(value=opt, selected="selected")= opt
      else
        option(value=opt)= opt
