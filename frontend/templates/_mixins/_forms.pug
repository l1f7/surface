mixin input-text(label, value, help)
  .uk-margin
    if (label != null)
      label.uk-form-label(for="id_label")= label
      .uk-form-controls
        if (value != null)
          input.uk-input(id="id_label", type="text", value=label)
        else
          input.uk-input(id="id_label", type="text")
    else
      .uk-form-controls
        input.uk-input(id="id_label", type="text", value=value)
    if (help)
      .help-block!= help


