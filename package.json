{
  "name": "surface",
  "description": "Lift front-end boilerplate.",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/l1f7/surface"
  },
  "scripts": {
    "start": "npm run lint:versions -s && cross-env NODE_ENV=development npm run watch -s",
    "start:proto": "npm run lint:versions -s && cross-env NODE_ENV=prototype npm run watch -s",
    "linter:eslint": "eslint \"frontend/assets/js/**\"",
    "linter:stylelint": "node_modules/.bin/stylelint \"frontend/assets/sass/**/*.scss\" --syntax scss",
    "lint:scripts": "npm run linter:eslint -s",
    "lint:styles": "npm run linter:stylelint -s",
    "lint:versions": "NVM_VERSION=$(cat .nvmrc); NODE_VERSION=$(node --version); echo $NODE_VERSION | grep -q $NVM_VERSION && echo \"\t✓ running node $NODE_VERSION - all clear\n\" || (echo \"\t✗ running node $NODE_VERSION - expected $NVM_VERSION. Use nvm to install the right version.\n\" && exit 1)",
    "build": "cross-env NODE_ENV=development gulp build",
    "build:proto": "cross-env NODE_ENV=prototype gulp build",
    "build:prod": "cross-env NODE_ENV=production gulp build",
    "watch": "gulp watch",
    "lock": "npm run lint:versions -s && npm shrinkwrap --dev && sed -i '' 's/https:/http:/g' npm-shrinkwrap.json"
  },
  "dependencies": {
    "jquery": "^2.2.4",
    "uikit": "3.0.0-beta.23",
    "throttle-debounce": "^1.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-preset-latest": "^6.24.1",
    "browser-sync": "^2.18.12",
    "cross-env": "^5.0.0",
    "csswring": "^6.0.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.0",
    "eslint-plugin-import": "^2.2.0",
    "expose-loader": "^0.7.3",
    "gulp": "^3.9.1",
    "gulp-changed": "^3.1.0",
    "gulp-imagemin": "^3.2.0",
    "gulp-load-plugins": "^1.5.0",
    "gulp-postcss": "^7.0.0",
    "gulp-pug": "^3.3.0",
    "gulp-sass": "^3.1.0",
    "gulp-size": "^2.1.0",
    "gulp-sourcemaps": "^2.6.0",
    "gulp-svg-sprite": "^1.3.6",
    "gulp-svgmin": "^1.2.4",
    "gulp-util": "^3.0.8",
    "stylelint": "^7.10.1",
    "stylelint-config-recess-order": "^1.2.0",
    "stylelint-order": "^0.4.4",
    "stylelint-scss": "^1.4.4",
    "webpack": "^2.6.0"
  }
}
